<script type="text/javascript">
    $(function () {
        loadLinks();
    });

    function f_showlaws(val) {
        layer.open({
            title: '法律申明',
            btn: [],
            anim: 2,
            area: ['600px', '400px'],
            shadeClose: true, //开启遮罩关闭
            content: val
        });
    }

    //加载友情链接
    function loadLinks() {
        $.ajax({
            url: '/AjaxCommon/GetArchivesYqlj?channelNo=YQLJ&rnd=' + Math.random(),
            type: 'POST',
            success: function (jdata) {
                var strHtml = '';
                for (var i = 0; i < jdata.data.length; i++) {
                    if (i >= 6) {
                        strHtml += '<li><a href="/Other/Links"> 更多>></a></li>';
                        break;
                    }
                    strHtml += '<li><a href="' + jdata.data[i].LinkUrl + '" target="_blank">' + jdata.data[i].Title + '</a></li>';
                }
                $("#ulLinks").html(strHtml);
            }
        });
    }
</script>
<script>
