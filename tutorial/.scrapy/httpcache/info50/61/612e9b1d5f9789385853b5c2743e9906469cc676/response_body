<script>
    //获取联系人电话填充
    function GetTel(that) {
        //console.log($(that).data("tel"));
        //console.log($(that).data("val"));
        //debugger;
        $("#ContactWay").val($(that).data("tel"));
        $("#Contacts").val($(that).data("val"));
    }

    ///已下架的提示
    function alertTip() {
        layer.alert("该展览已下架", { icon: 0 });
    }
    //申请高清资源
    $("#vipreservebtn").click(function () {
        if ($("#isLogin").data("value") == 0) {
            var tempHref = escape(window.location.href);
            window.location.href = "/Account/Login?backurl=" + tempHref;
        } else if ($("#LoginRole").val() != 60 && $("#LoginRole").val() != 61) {
            layer.alert('当前角色无法进行申请', { icon: 2 });
        } else {
            layer.open({
                type: 1,
                title: "申请高清资源",
                area: ["825px", "450px"],
                content: $(".vipreservecont"),
                closeBtn: 0,
                btn: ["确认", "取消"],
                btnAlign: "r",
                success: function () {
                    if ($("#LoginRole").val() == "61") {
                        $("#hideContact").click();
                    } else {
                        if ($("#LoginUser").val() != "" && $("#LoginUser").val() != undefined) {
                            var userid = $("#LoginUser").val();
                            $("#user_" + userid).attr("checked", "true");
                            GetTel($("#user_" + userid));
                        }
                    }
                },
                btn1: function (index, layero) {
                    var currentData = {}; //预订信息
                    currentData.ExhibitId = $("#CollectionId").val();
                    currentData.Contacts = $("#Contacts").val();
                    currentData.ContactWay = $("#ContactWay").val();
                    currentData.PicSize = $("#pic_choseVal").data("value");
                    currentData.Purpose = $("#Purpose").val();
                    if (currentData.Contacts == "") {
                        layer.alert("请输入联系人", { icon: 2 });
                        return;
                    }
                    if (currentData.ContactWay == "") {
                        layer.alert("请输入联系方式", { icon: 2 });
                        return;
                    }

                    if (!checkTel(currentData.ContactWay)) {
                        layer.alert("联系方式请输入手机号或座机号", { icon: 2 });
                        return;
                    }
                    $.ajax({
                        url: '/AjaxCommon/AddAuthorized',
                        data: 'param=' + encodeURIComponent(JSON2.stringify(currentData)),
                        type: 'POST',
                        async: true,
                        dataType: 'json',
                        beforeSend: function () {
                            layi = layer.load();
                        },
                        success: function (data) {
                            if (data.success == true) {
                                layer.close(layi);
                                layer.alert(data.message, { icon: 1 });
                                layer.close(index);
                                $(".mainform li input").val("");
                            } else {
                                layer.close(layi);
                                layer.alert(data.message, { icon: 2 });
                            }
                        },
                        complete: function () {
                            layer.close(layi);
                        },
                        error: function () {
                        }
                    });
                },
                btn2: function () {
                    $(".mainform li input").val("");
                }
            });
        }
    });

    //将藏品添加到我的展品中
    function AddColVirtual(id) {
        if ($("#isLogin").data("value") == 0) {
            var tempHref = escape(window.location.href);
            window.location.href = "/Account/Login?backurl=" + tempHref;
        }else {
            $.ajax({
                url: '/AjaxVirtual/AddColVirtual',
                data:{colid:id},
                type: 'POST',
                async: true,
                dataType: 'json',
                beforeSend: function () {
                    layi = layer.load();
                },
                success: function (data) {
                    layer.close(layi);
                    if (data.success == true) {
                        layer.alert(data.message, { icon: 1 });
                    } else {
                        layer.alert(data.message, { icon: 2 });
                    }
                },
                complete: function () {
                    layer.close(layi);
                },
                error: function () {
                    layer.close(layi);
                }
            });
        }
    };

    //下载文件
    function DownLoad(id) {
        var iframe = document.createElement("iframe"); //创建一个框架
        iframe.setAttribute("style", "display:none"); //创建框架样式
        iframe.src = "/AjaxCommon/GetFileInfo?Id=" + escape(id),
            document.body.appendChild(iframe);
    }

    function openAudio(that, src) {
        event.stopPropagation();
        var h3 = $(that).parent("li").attr("title");
        src = $(that).attr(src);
        $("#audioShade").fadeIn(200);
        $("body").css("overflow", "hidden");
        $("#audioShade .videobox h3").html(h3);
        $("#audioShade .videobox audio").attr("src", src);
        $("#audioShade .videobox audio")[0].play();
    }

    $("#audioShade .close").click(function () {
        $("#audioShade").fadeOut(200);
        $("body").css("overflow", "visible");
        $("#audioShade .videobox audio")[0].pause();
    });

    //视频播放
    function openVideo(that, src) {
        event.stopPropagation();
        var h3 = $(that).parent().parent().parent().find("a p").html();
        src = $(that).attr(src);
        $("#videoShade").fadeIn(200);
        $("body").css("overflow", "hidden");
        $("#videoShade .videobox h3").html(h3);
        $("#videoShade .videobox video").attr("src", src);
        $("#videoShade .videobox video")[0].play();
    }

    $("#videoShade .close").click(function () {
        $("#videoShade").fadeOut(200);
        $("body").css("overflow", "visible");
        $("#videoShade .videobox video")[0].pause();
    });
