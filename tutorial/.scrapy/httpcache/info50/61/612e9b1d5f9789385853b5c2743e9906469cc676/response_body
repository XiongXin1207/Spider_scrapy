<script type="text/javascript">
    $(function () {
        var currentImage;
        var currentIndex = -1;
        var bigimghtml = "";
        //for (var i = 0; i < 19; i++) {
        //    bigimghtml += '<div class="imgstyle"><img src="' + url + '/Scripts/OriginalPicBorder/images/' + (i + 1) + '.jpg" /></div>';
        //}
        //$("#bigimglist").html(bigimghtml);
        var alllength = $('#bigimglist').children().length;

        //显示大图(参数index从0开始计数)
        function showImage(index) {
            console.log(alllength);
            //显示大图
            if (index < alllength) {
                var indexImage = $('#bigimglist .imgstyle')[index];
                //隐藏当前的图
                if (currentImage) {
                    if (currentImage != indexImage) {
                        $(currentImage).css('z-index', 2);
                        $(currentImage).fadeOut(0, function () {
                            $(this).css({ 'display': 'none', 'z-index': 1 });
                        });
                    }
                }
                //显示用户选择的图
                $(indexImage).show().css({ 'opacity': 0.4 });
                $(indexImage).animate({ opacity: 1 }, { duration: 200 });
                //更新变量
                currentImage = indexImage;
                currentIndex = index;
                //移除并添加高亮
                $('#ThumbPic li').removeClass('active');
                $($('#ThumbPic li')[index]).addClass('active');
            }
        }
        //下一张
        function ShowNext() {
            //var len = $('#OriginalPic img').length;
            var next = currentIndex < (alllength - 1) ? currentIndex + 1 : 0;
            showImage(next);
        }
        //上一张
        function ShowPrep() {
            //var len = $('#OriginalPic img').length;
            var next = currentIndex == 0 ? (alllength - 1) : currentIndex - 1;
            showImage(next);
        }

        //初始化事件
        $("#bigimglist").ready(function () {

            ShowNext();

            //绑定缩略图点击事件
            $('#ThumbPic li').bind('click', function (e) {
                var count = $(this).attr('rel');
                showImage(parseInt(count) - 1);
            });
            changeSize($(".allcenter .imgstyle"));
        });
    });
</script>
