<script type="text/javascript">
    var id = $("#CommentId").val();
    var subtype = 'TSGC';
    if (subtype == "JPTJ") {
        //精品推荐和展览交流放在一起
        subtype = "ZLJL";
    }
    var page = 1;

    $(function () {
        getCommentList(id, '1');
    });

    //更多
    function more() {
        page++;
        getCommentList(id, page);
    }

    //获取评论列表
    function getCommentList(id, page) {
        $.ajax({
            url: '/AjaxCommon/GetCommentList',
            data: 'id=' + id + '&subtype=' + subtype + '&page=' + page,
            type: 'POST',
            async: true,
            dataType: 'json',
            success: function (data) {
                var jdata = data.data;
                var strHtml = '';
                for (var i = 0; i < jdata.length; i++) {
                    strHtml += '<li>';
                    strHtml += '<div class="comment">';
                    strHtml += '<div class="user-img"><img src="/Contents/Images/defaulthead.png" /></div>';
                    strHtml += '<div class="content-box">';
                    strHtml += '<div>';
                    strHtml += '<h3 class="user-info">' + jdata[i].LoginName + '<span>' + jdata[i].AddTimeDesc + '</span></h3>';
                    strHtml += '</div>';
                    strHtml += '<div class="content-box-content">' + jdata[i].CommentContent + '</div>';
                    if (jdata[i].listCommentReplay.length > 0) {
                        strHtml += '<div class="sub-comment-box">';
                        strHtml += '<ul>';
                        for (var j = 0; j < jdata[i].listCommentReplay.length; j++) {
                            var jdataR = jdata[i].listCommentReplay[j];
                            strHtml += '<li>';
                            strHtml += '<h3 class="user-info">管理员<span>回复</span></h3>';
                            strHtml += '<p class="content-box-content">' + jdataR.ReplayMsg + '</p>';
                            strHtml += '</li>';
                        }
                        strHtml += '</ul>';
                        strHtml += '</div>';
                    }
                    //strHtml += '<div class="clearfix">';
                    //strHtml += '<span class="sub-comment-btn" title="点赞">';
                    //strHtml += '<span>0</span>';
                    //strHtml += '</span>';
                    //strHtml += '</div>';
                    strHtml += '</div>';
                    strHtml += '</div>';
                    strHtml += '</li>';
                }
                $("#ulCommentList").append(strHtml);
                $("#spCommentCount").html("("+data.count+")");
                if (data.count == 0) {
                    $("#hComment").html("暂无评论");
                } else {
                    $("#hComment").html('全部评论<span id="spCommentCount">(' + data.count + ')</span>');
                }
                if (data.count <= 5) {
                    $(".view-more").hide();
                } else {
                    if (page >= data.pageCount) {
                        $(".view-more").hide();
                    }
                    else {
                        $(".view-more").show();
                    }
                }
            }
        });
    }

    //保存评论信息
    function saveComment() {
        var layi;
        if ($("#isLogin").data("value") == 0) {
            var tempHref = window.location.href;
            window.location.href = "/Account/Login?backurl=" + tempHref;
            return;
        }
        var currentData = {};//评论信息
        currentData.CommentContent = $("#txtCommentContent").val();
        currentData.CommentName = $("#CommentName").val();
        currentData.CommentId = $("#CommentId").val();
        currentData.UnitId = $("#UnitId").val();
        currentData.subType = subtype;

        if (currentData.CommentContent == "") {
            layer.alert("请输入评论内容", { icon: 2 });
            return;
        }

        $.ajax({
            url: '/AjaxCommon/SaveComment',
            data: 'param=' + encodeURIComponent(JSON2.stringify(currentData)),
            type: 'POST',
            async: true,
            dataType: 'json',
            beforeSend: function () {
                layi = layer.load();
            },
            success: function (data) {
                layer.close(layi);
                if (data.success == true) {
                    layer.alert("评论成功", { icon: 1 });
                    $("#txtCommentContent").val("");
                    $("#ulCommentList").html("");
                    getCommentList(id, '1');
                } else {
                    layer.alert(data.message, { icon: 2 });
                }
            },
            complete: function () {
                layer.close(layi);
            },
            error: function () {
            }
        });
    }
</script>
<script type="text/javascript">

    $(function () {
        getFavoriteList(id);
    });

    //获取收藏记录
    function getFavoriteList(id) {
        $.ajax({
            url: '/AjaxCommon/GetFavoriteCount',
            data: 'id=' + id + '&subtype=' + subtype,
            type: 'POST',
            async: true,
            dataType: 'json',
            success: function (data) {
                var strHtml = '<i></i><span>收藏(' + data.count + ')</span>';
                $("#spFav").html(strHtml);
                if (data.isFavorite == true) {
                    $("#spFav").addClass("active");
                } else {
                    $("#spFav").removeClass("active");
                }
            }
        });
    }

    //收藏
    function saveFavorite() {
        var layi;
        if ($("#isLogin").data("value") == 0) {
            var tempHref = window.location.href;
            window.location.href = "/Account/Login?backurl=" + tempHref;
        }

        var currentData = {};//收藏信息
        currentData.FavoriteName = $("#CommentName").val();
        currentData.FavoriteId = $("#CommentId").val();
        currentData.subType = subtype;

        $.ajax({
            url: '/AjaxCommon/SaveFavorite',
            data: 'param=' + encodeURIComponent(JSON2.stringify(currentData)),
            type: 'POST',
            async: true,
            dataType: 'json',
            beforeSend: function () {
                layi = layer.load();
            },
            success: function (data) {
                layer.close(layi);
                if (data.success == true) {
                    layer.alert(data.message, { icon: 1 });
                    var strHtml = '<i></i><span>收藏(' + data.count + ')</span>';
                    $("#spFav").html(strHtml);
                    if (data.isFavorite == true) {
                        $("#spFav").addClass("active");
                    }
                    else {
                        $("#spFav").removeClass("active");
                    }
                } else {
                    //layer.alert(data.message, { icon: 2 });
                }
            },
            complete: function () {
                layer.close(layi);
            },
            error: function () {
            }
        });
    }

</script>
<script type="text/javascript">

    //点赞
    function saveLike(likeId, likeType) {
        //if ($("#isLogin").data("value") == 0) {
        //    var tempHref = window.location.href;
        //    window.location.href = "/Account/Login?backurl=" + tempHref;
        //}

        if ($("#spLike").hasClass("active") == true) {
            return;
        }

        $.ajax({
            url: '/AjaxCommon/SaveLike',
            data: 'id=' + likeId + "&type=" + likeType,
            type: 'POST',
            async: true,
            dataType: 'json',
            success: function (data) {
                $("#spLike").html("<i></i><span>点赞(" + data + ")</span>");
                $("#spLike").addClass("active");
            }
        });
    }

</script>
